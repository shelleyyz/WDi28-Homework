<h1>New Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
    <label>Name:</label>
    <input type="text" name="name"  required>
    <label>Type:</label>
    <input type="text" name="type" >
    <label>Image:</label>
    <input type="url" name="image">
    <label>Elevation:</label>
    <input type="number" name="elevation">
    <button>Create mountain</button>
</form>
