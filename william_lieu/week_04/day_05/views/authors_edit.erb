<h1>Edit Author</h1>

<form action="/authors/<%= @author.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @author.name %>" placeholder="Author name" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @author.image %>" placeholder="http://...">

  <button>Update</button>
</form>
