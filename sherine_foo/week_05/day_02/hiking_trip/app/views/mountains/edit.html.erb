<h1>Edit Hiking Trial</h1>

<form action="<%= mountains_path(@mountain.id) %>" method="post">
  <label>Name :</label>
  <input type="text" name="name" value="<%= @mountain.name %>" placeholder="Trial Name" required>
</br>
  <label>Height :</label>
  <input type="integer" name="height" value="<%= @mountain.height %>" placeholder="foot">
</br>
  <label>Distance :</label>
  <input type="integer" name="distance" value="<%= @mountain.distance %>" placeholder="miles">
</br>
  <label>Country :</label>
  <input type="text" name="country" value="<%= @mountain.country %>" placeholder="Country Name">
</br>
  <label>Image :</label>
  <input type="url" name="image" value="<%= @mountain.image %>" placeholder="http://..">
</br>
  <button>Update Trial</button>

</br>
</br>

<table align="center">
  <thead>
    <tr align="center">
      <td>Name</td>
      <td>Height</td>
      <td>Distance</td>
      <td>Country</td>
    </tr>


  <tbody >
    <tr align="center">
      <td><%= @mountain.name %></td>
      <td><%= @mountain.height %></td>
      <td><%= @mountain.distance %></td>
      <td><%= @mountain.country %></td>

    </tr>
  </tbody>
</thead>

</table>

  <%= image_tag @mountain.image, :class=>'feature' unless @mountain.image.nil? %>


</form>
